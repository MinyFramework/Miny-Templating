<?xml version="1.0"?>

<phpunit
    bootstrap="bootstrap.php"
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
>
    <logging>
        <log type="coverage-html" target="./report" charset="UTF-8" highlight="true" lowUpperBound="35" highLowerBound="70"/>
    </logging>
</phpunit>